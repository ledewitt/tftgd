<% @posts.each do |post| %>
    <header>
      <h2>
        <a href="/<%= post.slug %>"><%= post.title %></a>
      </h2>

      <% if post.date %>
        <time datatime="<%= post.date.to_s %>">
          <a href="/<%= post.slug %>">
            <%= post.date.to_s(:short_ordinal) %>
          </a>
        </time>
      <% end %>

      <% if post.author %>
        <h3 class="author">
          by <%= post.author %>
        </h3>
      <% end %>
    </header>

    <div class="grid-blog-entry">
      <%== post.render %>
    </div>
<% end %>

<% content_for :side_bar do %>
  sidebar
<% end %>

<% content_for :footer do %>
  footer
<% end %>

<% content_for :title do %><%= @entry.title %><% end %>
<div class="post <%= @entry.id %>">
  <header>
    <h2>
      <a href="/<%= @entry.id %>"><%= @entry.title %></a>
    </h2>
    <% if @entry.date_time %>
      <time datatime="<%= @entry.date_time.to_s %>">
        <a href="/<%= @entry.id %>">
          <%= @entry.date_time.to_s(:short_ordinal) %>
        </a>
      </time>
    <% end %>
    <% if @entry.author_name %>
      <h3 class="author_name">
        by <%= @entry.author_name %>
      </h3>
    <% end %>
    <% if ENV['author'] == 'enabled' %>
      Hello from my secure app.
    <% end %>
  </header>
  <%== @entry.render %>
</div>
